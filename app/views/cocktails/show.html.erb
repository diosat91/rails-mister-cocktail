<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<h2><%= @cocktail.name %></h2>

<h3>Doses</h3>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>

  <p><%= dose.ingredient.name %></p>

  <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  
<% end %>


 <%= link_to 'Back to cocktails', cocktails_path %>
